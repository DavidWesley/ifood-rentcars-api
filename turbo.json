{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [ "**/.env.*local", "tsconfig.json" ],
  "globalDotEnv": [ ".env" ],
  "globalEnv": [ "NODE_ENV" ],
  "pipeline": {
    "build": {
      "dependsOn": [ "^build" ],
      "cache": true,
      "outputs": [ ".next/**", "!.next/cache/**", "dist/**" ],
      "env": [ "NODE_ENV", "DATABASE_URL" ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [ "NODE_ENV", "DATABASE_URL" ]
    },
    "lint": {
      "dependsOn": [ "^lint" ],
      "cache": true
    },
    "format": {
      "cache": true
    }
  }
}